<h1 class="mb-1 restaurant-show-title">新增餐廳</h1>

<div class="container restaurant-form">
  <form action="/restaurants" method="POST">
  <div class="mb-3">
    <label for="name">店名<span class="text-danger">*</span></label>
    <input type="text" class="form-control {{validate validateResult.name}}" name="name" id="name" placeholder="梅子鰻蒲燒專賣店" aria-label="default input example" value="{{ restaurant.name }}">
    <div class="invalid-feedback">
      This field is required
    </div>
  </div>
  <div class="mb-3">
    <label for="name_en">英文店名<span class="text-danger"></span></label>
    <input type="text" class="form-control {{validate validateResult.name_en}}" name="name_en" id="name_en" placeholder="" aria-label="default input example" value="{{ restaurant.name_en }}">
    <div class="valid-feedback">
      This field is Optional
    </div>
  </div>
  <div class="mb-3">
    <label for="category">類別<span class="text-danger">*</span></label>
    <input list="categoryList" type="text" class="form-control {{validate validateResult.category}}" name="category" id="category" placeholder="日式料理" aria-label="default input example" value="{{ restaurant.category }}">
      <datalist id="categoryList">
        <option>美式</option>
        <option>酒吧</option>
        <option>咖啡廳</option>
        <option>日式料理</option>
        <option>義式餐廳</option>
        <option>中東料理</option>
      </datalist>
    <div class="invalid-feedback">
      Please select a type of restaurant!
    </div>
  </div>
  <div class="mb-3">
    <label for="location">地址<span class="text-danger">*</span></label>
    <input type="text" class="form-control {{validate validateResult.location}}" name="location" id="location" placeholder="台北市中山區林森北路 107 巷 8 號" aria-label="default input example" value="{{ restaurant.location }}">
    <div class="invalid-feedback">
      This field is required
    </div>
  </div>
  <div class="mb-3">
    <label for="phone">電話<span class="text-danger">*</span></label>
    <input type="tel" class="form-control {{validate validateResult.phone}}" name="phone" id="phone" placeholder="02-2521-2813" aria-label="default input example" value="{{ restaurant.phone }}">
    <div class="invalid-feedback">
      Please enter a valid phone number (eg.xx-xxxx-xxxx) !
    </div>
  </div>
  <div class="mb-3">
    <label for="rating">評分<span class="text-danger">*</span></label>
    <input type="number" class="form-control {{validate validateResult.rating}}" name="rating" id="rating" step="0.1" placeholder="4.3" aria-label="default input example" value="{{ restaurant.rating }}">
    <div class="invalid-feedback">
      0 ~ 5
    </div>
  </div>
  <div class="mb-3">
    <label for="description">描述<span class="text-danger"></span></label>
    <textarea class="form-control {{validate validateResult.description}}" name="description" id="description" rows="3">{{restaurant.description}}</textarea>
    <div class="valid-feedback">
      This field is Optional
    </div>
  </div>
  <div class="mb-3">
    <label for="google_map">Google地圖連結<span class="text-danger">*</span></label>
    <input type="url" class="form-control {{validate validateResult.google_map}}" name="google_map" id="google_map" placeholder="http://..." value="{{ restaurant.google_map }}">
    <div class="invalid-feedback">
      Please enter a valid URL in the format of http(s)://....
    </div>
  </div>
  <div class="mb-3">
    <label for="image">圖片連結<span class="text-danger">*</span></label>
    <input type="url" class="form-control {{validate validateResult.image}}" name="image" id="image" placeholder="http://..." value="{{ restaurant.image }}">
    <div class="invalid-feedback">
      Please enter a valid URL in the format of http(s)://....
    </div>
  </div>

  <div class="text-center mb-3">
    <button type="submit" class="btn btn-major">
      <i class="fa-sharp fa-solid fa-circle-plus me-2"></i>Add
    </button>
    <button type="reset" class="btn btn-major"><i class="fa-solid fa-eraser me-2"></i>Clear</button>
     <a href="/"><button type="button" class="btn btn-outline-secondary">
      <i class="fa-solid fa-house"></i>
    </button></a>
  </div>
</form>
</div>