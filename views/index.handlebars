<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keywords}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
      </form>
      <div class="text-end mx-3">
        <a href="/restaurants/new" class="btn btn-major">新增餐廳</a>
      </div>
      </div>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{!-- use 'each' display restaurant list --}}
        {{#each restaurants}}
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}"
              alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge rounded-pill bg-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i> 
              </span>
              </div>
              <div class="card-footer d-flex justify-content-end flex-wrap">
                <a href="/restaurants/{{this._id}}/edit"><button class="btn btn-secondary btn-sm mx-2">Edit</button></a>
                <a href="/restaurants/{{this._id}}"><button class="btn btn btn-secondary btn-sm mx-2">Details</button></a>
                <form action="/restaurants/{{this._id}}/delete" method="POST">
                  <button type="submit" class="btn btn-secondary btn-sm text-white mx-2">Delete</button>
                </form>
              </div>
          </div>
        {{else}}
          <div class="row mx-auto">
          <div class="wrong d-flex flex-column align-items-center mt-5">
            <i class="d-flex justify-content-center wrong-search fa-solid fa-circle-xmark"></i>
            <h5>找不到符合項目</h5>
            <p>請改為搜尋其他項目</p>
          </div>
          </div>
        {{/each}}
      </div>
    </div>  
  </div> 
</div>